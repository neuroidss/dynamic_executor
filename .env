# Google Gemini API Key (required for embeddings and chat)
#GEMINI_API_KEY="YOUR_GEMINI_API_KEY"

# OpenAI Compatible Endpoint for Gemini (usually provided by Google)
# As of early 2024, this is the standard endpoint for Gemini via OpenAI API compatibility layer
OPENAI_API_BASE_URL="https://generativelanguage.googleapis.com/v1beta/openai"

# Model for tool code generation (Gemini Flash via OpenAI endpoint name)
# Check Google's documentation for the exact model names supported by this endpoint
OPENAI_LLM_MODEL="gemini-2.5-flash-preview-04-17" # Or 'gemini-1.5-flash-latest', etc.

# Embedding model name for Chroma (Google's embedding model)
LANGCHAIN_EMBEDDING_MODEL="models/text-embedding-004" # Or other available models

# ChromaDB URL
CHROMA_URL="http://localhost:8000"

